type Admin {
  id: ID! @id
  username: String! @unique
  password: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type User {
  id: ID! @id
  name: String!
  birthday: DateTime!
  email: String! @unique
  cellPhone: String! @unique
  company: String
  companyDesc: [String!]! @scalarList(strategy: RELATION)
  team: String
  position: String
  workPhone: String
  workAddress: String
  photo: String
  emailSecret: String
  isConfirmed: Boolean! @default(value: false)
  major: Major!
  graduatedYear: GradYear!
  executive: Executive @relation(link: TABLE, onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Executive {
  id: ID! @id
  generation: Int!
  title: String!
  user: User!
}

type Prof {
  id: ID! @id
  name: String!
  title: String!
  position: String!
  email: String @unique
  workPhone: String
  company: String
  order: Int! @unique
  photo: String
  major: Major!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Major {
  id: ID! @id
  name: String! @unique
  users: [User!]!
  profs: [Prof!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type GradYear {
  id: ID! @id
  year: Int!
  semester: Int!
  generation: Int! @unique
  users: [User!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Notice {
  id: ID! @id
  title: String!
  desc: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
